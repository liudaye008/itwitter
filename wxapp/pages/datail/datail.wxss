/* pages/join/join.wxss */
page{
  background-color: #f3f3f3;
  height: 100%;
}
.banner{
  width: 100%;
  height: 300rpx;
}
.personal-msg{
  height: 200rpx;
  width: 100%;
   margin: 20rpx; 
}
.personal-pic{
  width: 180rpx;
  height: 180rpx;
  float: left;
  border-radius: 100rpx;
}
.personal-detail{
  height: 200rpx;
  width:500rpx;
  float: left;
  margin-left: 20rpx;
}
.personal-desc{
  font-size: 25rpx;
}
.personal-location{
  font-size: 25rpx;
  margin-top: 10rpx;
}
.personal-location-icon{
  width: 30rpx;
  height: 30rpx;
  display: block;
  float: left;
}
.personal-location-address{
  float: left;
  margin-left: 10rpx;
}


.block{
  margin-bottom: 20rpx;
  background-color: #fff;
}
.block-title{
  position: relative;
  font-size: 34rpx;
  line-height: 1.5;
  color: #2e5e86;
  padding-left: 40rpx;
}
.block-title::after{
  position: absolute;
  left: 20rpx;
  top: 4rpx;
  content: '';
  width: 10rpx;
  height: 40rpx;
  background-color: #2e5e86;
}
.block-time{
  padding: 0 20rpx;
}
.block-time-icon{
  width: 30rpx;
  height: 30rpx;
}
.block-time-content{
  font-size: 25rpx;
  color: #515151;
}
.block-desc{
  line-height: 1.6;
  font-size: 30rpx;
  color: #666;
  display: block;
  padding: 0 30rpx 30rpx;
}
.tips1{
  text-align: center;
  color: #999;
}
